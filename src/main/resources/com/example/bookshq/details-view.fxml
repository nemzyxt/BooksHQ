<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextAlignment?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.bookshq.DetailsController" styleClass="details-container"  stylesheets="@styles.css">
    <!-- Back button at the top -->
    <Button text="Back" onAction="#handleBackButtonClick" styleClass="back-button"/>

    <!-- Display the name property in the center of the scene -->
    <Label fx:id="nameLabel" textAlignment="CENTER" styleClass="name-label"/>

    <!-- Display other properties as a list -->
    <Label text="Authors: " fx:id="authorsLabel" styleClass="property-label"/>
    <Label text="Rating: " fx:id="ratingLabel" styleClass="property-label"/>
    <Label text="Created Editions: " fx:id="createdEditionsLabel" styleClass="property-label"/>
    <Label text="Year: " fx:id="yearLabel" styleClass="property-label"/>
</VBox>
